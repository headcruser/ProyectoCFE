<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Href("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Href("~/Content/style.css")" />
</head>
<body>
    <header>
        <div class="row">
            <div class="col-md-12">
                <div class="container">
                    <img class="img-responsive"
                         src="~/imagenes/banner.jpg"
                         alt="Banner principal" />
                </div>
            </div>
        </div>

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Usuarios", "Index", "User")</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
  
    
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="contacto col-md-6">
                    <h3>Contacto</h3>
                    <p>Telefono: 461 255 1160</p>
                    <p>Email: headcruser@gmail.com</p>
                    <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
                </div>
                <div class="redes-sociales col-md-6">
                    <div class="item facebook">
                        Facebook
                    </div>
                    <div class="item twitter">
                        Twitter
                    </div>
                    <div class="item ins">
                        Instagram
                    </div>
                    <div class="item tinder">
                        Tinder
                    </div>
                </div>
            </div>
        </footer>
    
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
